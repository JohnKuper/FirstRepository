<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">
    <servlet>
        <servlet-name>AuthorizationController</servlet-name>
        <servlet-class>controller.AuthorizationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MatriculantController</servlet-name>
        <servlet-class>controller.MatriculantController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MatriculantController</servlet-name>
        <url-pattern>/matriculant</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthorizationController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
</web-app>
